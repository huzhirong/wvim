# 标题右侧带有链接等
snippet head-title
	.head-title.clearfix>h2+a.more
# 标题类列表
# 1.普通形式
snippet ul-title-list 普通列表
	ul.title-list>li>a.title-link
# 2.右侧带有文字形式
snippet ul-title-list 右侧带有文字形式
	ul.title-list.title-left>li>a.title-link+span.grey
# 排行榜
snippet ul-rate-list
	ul.rate-list>li>i+a.title-link+span.grey
# 用户头像列表
snippet ul-user-avatar
	ul.user-avatar.clearfix>li>a>img+strong
# 图片标题列表
snippet ul-img-title 普通标题列表
	ul.img-title.clearfix>li>a>img+strong
snippet ul-img-title 半透明标题列表
	ul.img-title.title-alpha.clearfix>li>a>img+strong
# 图片文字垂直项目列表
snippet ul-imgtext-v
	ul.imgtext-v.clearfix>li>(a>img)+(h3.short-title>a)+p
# 图文混排水平列表
snippet imgtext-h
	.imgtext-h.clearfix>(a.img-left>img)+(.text-right>(h3>a)+p)
snippet ul-imgtext-h-block
	ul.imgtext-h-block.clearfix>li>(a.img-left>img)+(.text-right>(h3.short-title>a)+p)
# 无缝滚动
snippet carousel
	.carousel>(.view-content>ul>li>a>img+strong)+a.prev-btn+a.next-btn
# 展示所有的缩写
snippet abbr
	head-title         : .head-title.clearfix>h2+a.more
	ul-title-list      : ul.title-list>li>a.title-link
	ul-title-list      : ul.title-list.title-left>li>a.title-link+span.grey
	ul-rate-list       : ul.rate-list>li>i+a.title-link+span.grey
	ul-user-avatar     : ul.user-avatar.clearfix>li>a>img+strong
	ul-img-title       : ul.img-title.clearfix>li>a>img+strong
	ul-imgtext-v       : ul.imgtext-v.clearfix>li>(a>img)+(h3.short-title>a)+p
	imgtext-h          : .imgtext-h.clearfix>(a.img-left>img)+(.text-right>(h3>a)+p)
	ul-imgtext-h-block : ul.imgtext-h-block.clearfix>li>(a.img-left>img)+(.text-right>(h3.short-title>a)+p)
	carousel           : .carousel>(.view-content>ul>li>a>img+strong)+a.prev-btn+a.next-btn
